<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CSharpQuizApp.Views.ModeSelectionView">
    <Border Background="#1F1F1F" Padding="30">
        <Grid RowDefinitions="Auto,*,Auto" Margin="0">
            
            <TextBlock Grid.Row="0"
                       Text="🎮 Wybierz tryb gry"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="15">
                <Button Content="Quiz losowy (10 pytań)" 
                        Width="250" Height="50" Cursor="Hand"
                        Click="StartRandomQuiz_Click"/>
                
                <Button Content="Quiz pełny (wszystkie pytania)" 
                        Width="250" Height="50" Cursor="Hand"
                        Click="StartAllQuestionsQuiz_Click"/>
                
                <Button Content="📚 Quiz wg kategorii"
                        Width="250" Height="50" Cursor="Hand"
                        Click="ShowCategorySelection_Click"/>
            </StackPanel>
            
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20" Margin="0,20,0,0">
                <Button Content="🔙 Powrót do menu"
                        Width="150" Height="40"
                        Cursor="Hand"
                        Click="BackToMenu_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>