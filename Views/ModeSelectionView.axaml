<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:loc="clr-namespace:CSharpQuizApp.Localization"
             x:Class="CSharpQuizApp.Views.ModeSelectionView">
    <Border Background="#1F1F1F" Padding="30">
        <Grid RowDefinitions="Auto,*,Auto" Margin="0">
            
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock Text="🎮"
                           FontSize="24"
                           Margin="0,-8,8,0"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding [Mode_Title], Source={x:Static loc:LocalizationService.L}}"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"/>
            </StackPanel>
            
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="15">
                <Button Cursor="Hand"
                        Width="250"
                        Height="50"
                        Click="StartRandomQuiz_Click"
                        FontSize="16"
                        HorizontalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Focusable="True">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="🎲"
                                   FontSize="20"
                                   Margin="0,-2,5,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding [Mode_Random], Source={x:Static loc:LocalizationService.L}}"
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <Button Cursor="Hand"
                        Width="250"
                        Height="50"
                        Click="StartAllQuestionsQuiz_Click"
                        FontSize="16"
                        HorizontalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Focusable="True">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="🧠"
                                   FontSize="20"
                                   Margin="0,-2,5,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding [Mode_All], Source={x:Static loc:LocalizationService.L}}"
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <Button Cursor="Hand"
                        Width="250"
                        Height="50"
                        Click="StartSurvivalQuiz_Click"
                        FontSize="16"
                        HorizontalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Focusable="True">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="🔥"
                                   FontSize="20"
                                   Margin="0,-2,5,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding [Mode_Survival], Source={x:Static loc:LocalizationService.L}}"
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <Button Cursor="Hand"
                        Width="250"
                        Height="50"
                        Click="ShowCategorySelection_Click"
                        FontSize="16"
                        HorizontalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Focusable="True">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="📂"
                                   FontSize="20"
                                   Margin="0,-5,5,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding [Mode_ByCategory], Source={x:Static loc:LocalizationService.L}}"
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20" Margin="0,20,0,0">
                <Button Width="200"
                        Cursor="Hand"
                        Click="BackToMenu_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="8">
                        <TextBlock Text="🔙" FontSize="14" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding [Mode_Back], Source={x:Static loc:LocalizationService.L}}"
                                   FontSize="14"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
