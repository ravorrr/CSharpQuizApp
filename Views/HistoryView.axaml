<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:CSharpQuizApp.ViewModels"
             x:Class="CSharpQuizApp.Views.HistoryView"
             x:DataType="vm:HistoryViewModel">

    <Border Background="#232323" Padding="30" CornerRadius="16">
        <Grid RowDefinitions="Auto,*,Auto" Margin="0">
            
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock Text="📜"
                           FontSize="24"
                           Margin="0,-3,8,0"
                           VerticalAlignment="Center"/>
                <TextBlock Text="Historia Quizów"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"/>
            </StackPanel>
            
            <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,20">
                <Border Background="#282828"
                        Padding="10,2"
                        CornerRadius="8, 8, 0, 0"
                        HorizontalAlignment="Stretch"
                        Margin="0,0,0,0">
                    <Grid ColumnDefinitions="160,100,120,90,70">
                        <Button Content="{Binding DateHeader}" Command="{Binding SortCommand}" CommandParameter="Date"
                                Background="Transparent" Foreground="White" BorderBrush="Transparent"
                                FontWeight="Bold" Cursor="Hand" Grid.Column="0"
                                HorizontalAlignment="Stretch" MinWidth="0"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        <Button Content="{Binding PlayerHeader}" Command="{Binding SortCommand}" CommandParameter="PlayerName"
                                Background="Transparent" Foreground="White" BorderBrush="Transparent"
                                FontWeight="Bold" Cursor="Hand" Grid.Column="1"
                                HorizontalAlignment="Stretch" MinWidth="0"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        <Button Content="{Binding TypeHeader}" Command="{Binding SortCommand}" CommandParameter="QuizType"
                                Background="Transparent" Foreground="White" BorderBrush="Transparent"
                                FontWeight="Bold" Cursor="Hand" Grid.Column="2"
                                HorizontalAlignment="Stretch" MinWidth="0"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        <Button Content="{Binding ScoreHeader}" Command="{Binding SortCommand}" CommandParameter="Score"
                                Background="Transparent" Foreground="White" BorderBrush="Transparent"
                                FontWeight="Bold" Cursor="Hand" Grid.Column="3"
                                HorizontalAlignment="Stretch" MinWidth="0"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        <Button Content="{Binding TimeHeader}" Command="{Binding SortCommand}" CommandParameter="Time"
                                Background="Transparent" Foreground="White" BorderBrush="Transparent"
                                FontWeight="Bold" Cursor="Hand" Grid.Column="4"
                                HorizontalAlignment="Stretch" MinWidth="0"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </Grid>
                </Border>
                <ListBox ItemsSource="{Binding History}"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         MaxHeight="500"
                         Background="#1F1F1F"
                         BorderThickness="0"
                         Padding="0"
                         Cursor="Hand"
                         CornerRadius="0, 0, 8, 8"
                         Margin="0,0,0,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="160,100,120,90,70"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch">
                                <TextBlock Text="{Binding DateText}" Foreground="White" Grid.Column="0"
                                           TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                                <TextBlock Text="{Binding PlayerName}" Foreground="White" Grid.Column="1"
                                           TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                                <TextBlock Text="{Binding QuizType}" Foreground="White" Grid.Column="2"
                                           TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                                <TextBlock Text="{Binding ScoreText}" Foreground="White" Grid.Column="3"
                                           TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                                <TextBlock Text="{Binding TimeText}" Foreground="White" Grid.Column="4"
                                           TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
            
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20" Margin="0,20,0,20">
                <Button Content="🗑️ Wyczyść historię"
                        Click="ClearHistory_Click"
                        Width="200"
                        Cursor="Hand"/>
                <Button Content="🔙 Powrót do menu"
                        Click="Back_Click"
                        Width="200"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
