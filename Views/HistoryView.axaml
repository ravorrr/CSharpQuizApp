<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:CSharpQuizApp.ViewModels"
             xmlns:loc="clr-namespace:CSharpQuizApp.Localization"
             xmlns:m="clr-namespace:CSharpQuizApp.Models"
             x:Class="CSharpQuizApp.Views.HistoryView"
             x:DataType="vm:HistoryViewModel">

    <Border Background="#232323" Padding="30" CornerRadius="16">
        <Grid RowDefinitions="Auto,*,Auto" Margin="0">
            
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock Text="📜" FontSize="24" Margin="0,-3,8,0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding [History_Header], Source={x:Static loc:LocalizationService.L}}"
                           FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
            
            <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,20">

                <Border Background="#282828" Padding="10,2" CornerRadius="8, 8, 0, 0" HorizontalAlignment="Stretch">
                    <Grid ColumnDefinitions="160,100,120,90,70">
                        <Button Content="{Binding [History_DateTime], Source={x:Static loc:LocalizationService.L}}"
                                Command="{Binding SortCommand}" CommandParameter="Date"
                                Background="Transparent" Foreground="White" BorderBrush="Transparent"
                                FontWeight="Bold" Cursor="Hand" Grid.Column="0"
                                HorizontalAlignment="Stretch" MinWidth="0"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        <Button Content="{Binding [History_Player], Source={x:Static loc:LocalizationService.L}}"
                                Command="{Binding SortCommand}" CommandParameter="PlayerName"
                                Background="Transparent" Foreground="White" BorderBrush="Transparent"
                                FontWeight="Bold" Cursor="Hand" Grid.Column="1"
                                HorizontalAlignment="Stretch" MinWidth="0"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        <Button Content="{Binding [History_Mode], Source={x:Static loc:LocalizationService.L}}"
                                Command="{Binding SortCommand}" CommandParameter="QuizType"
                                Background="Transparent" Foreground="White" BorderBrush="Transparent"
                                FontWeight="Bold" Cursor="Hand" Grid.Column="2"
                                HorizontalAlignment="Stretch" MinWidth="0"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        <Button Content="{Binding [History_Score], Source={x:Static loc:LocalizationService.L}}"
                                Command="{Binding SortCommand}" CommandParameter="Score"
                                Background="Transparent" Foreground="White" BorderBrush="Transparent"
                                FontWeight="Bold" Cursor="Hand" Grid.Column="3"
                                HorizontalAlignment="Stretch" MinWidth="0"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        <Button Content="{Binding [History_Time], Source={x:Static loc:LocalizationService.L}}"
                                CommandParameter="Time" Command="{Binding SortCommand}"
                                Background="Transparent" Foreground="White" BorderBrush="Transparent"
                                FontWeight="Bold" Cursor="Hand" Grid.Column="4"
                                HorizontalAlignment="Stretch" MinWidth="0"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </Grid>
                </Border>
                
                <ListBox ItemsSource="{Binding History}"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         MaxHeight="500"
                         Background="#1F1F1F"
                         BorderThickness="0"
                         Padding="0"
                         Cursor="Hand"
                         CornerRadius="0, 0, 8, 8">
                    <ListBox.ItemTemplate>
                        <DataTemplate x:DataType="m:QuizHistoryEntry">
                            <Grid ColumnDefinitions="160,100,120,90,70"
                                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <TextBlock Text="{Binding DateText}"   Foreground="White" Grid.Column="0"
                                           TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                                <TextBlock Text="{Binding PlayerName}" Foreground="White" Grid.Column="1"
                                           TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                                
                                <TextBlock Text="{Binding QuizTypeLocalized}" Foreground="White" Grid.Column="2"
                                           TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>

                                <TextBlock Text="{Binding ScoreText}" Foreground="White" Grid.Column="3"
                                           TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                                <TextBlock Text="{Binding TimeText}"  Foreground="White" Grid.Column="4"
                                           TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
            
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Spacing="20"
                        Margin="0,20,0,20">

                <Button Width="200" Cursor="Hand" Click="ClearHistory_Click">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="White"
                               DataContext="{x:Static loc:LocalizationService.L}"
                               x:DataType="loc:Localizer">
                        <Run Text="🗑️ "/>
                        <Run Text="{Binding [History_Clear]}"/>
                    </TextBlock>
                </Button>

                <Button Width="200" Cursor="Hand" Click="Back_Click">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="White"
                               DataContext="{x:Static loc:LocalizationService.L}"
                               x:DataType="loc:Localizer">
                        <Run Text="🔙 "/>
                        <Run Text="{Binding [History_Back]}"/>
                    </TextBlock>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
