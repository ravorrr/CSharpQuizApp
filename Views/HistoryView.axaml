<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:CSharpQuizApp.ViewModels"
             x:Class="CSharpQuizApp.Views.HistoryView"
             x:DataType="vm:HistoryViewModel">

    <Border Background="#1F1F1F" Padding="30">
        <Grid RowDefinitions="Auto,*,Auto" Margin="0">
            <TextBlock Grid.Row="0"
                       Text="📜 Historia Quizów"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            
            <ListBox Grid.Row="1"
                     ItemsSource="{Binding History}"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     MaxHeight="500">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Foreground="White">
                            <Run Text="{Binding DateText}"/>
                            <Run Text=" | "/>
                            <Run Text="{Binding PlayerName}"/>
                            <Run Text=" | "/>
                            <Run Text="{Binding QuizType}"/>
                            <Run Text=" | "/>
                            <Run Text="{Binding ScoreText}"/>
                            <Run Text=" | "/>
                            <Run Text="{Binding TimeText}"/>
                        </TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20" Margin="0,20,0,0">
                <Button Content="🗑️ Wyczyść historię"
                        Click="ClearHistory_Click"
                        Width="200"
                        Cursor="Hand"/>
                <Button Content="🔙 Powrót"
                        Click="Back_Click"
                        Width="200"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>