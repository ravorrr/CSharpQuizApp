<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CSharpQuizApp.Views.CategorySelectionView">
    <Grid RowDefinitions="Auto,*,Auto"
          Margin="30"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Center">
        
        <TextBlock Text="Wybierz kategorię quizu"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Grid.Row="0" />
        
        <ScrollViewer Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top">
            <StackPanel x:Name="MainStackPanel"
                        Spacing="15"
                        HorizontalAlignment="Center" />
        </ScrollViewer>
        
        <Button Content="⬅️ Powrót do menu"
                Width="250"
                Height="40"
                Cursor="Hand"
                Click="BackToMenu_Click"
                Grid.Row="2"
                HorizontalAlignment="Center"
                Margin="0,30,0,0"/>
    </Grid>
</UserControl>