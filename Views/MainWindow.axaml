<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="CSharpQuizApp.Views.MainWindow"
        Width="400" Height="300" Title="Quiz App">

    <StackPanel Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
    
        <TextBlock x:Name="QuestionTextBlock" FontSize="18" TextWrapping="Wrap" />

        <Button x:Name="Answer1Button" Click="Answer1_Click"/>
        <Button x:Name="Answer2Button" Click="Answer2_Click"/>
        <Button x:Name="Answer3Button" Click="Answer3_Click"/>
        <Button x:Name="Answer4Button" Click="Answer4_Click"/>

        <TextBlock x:Name="FeedbackTextBlock" FontWeight="Bold" FontSize="14" Foreground="DarkGreen"/>
        
        <TextBlock x:Name="ScoreTextBlock"
                   FontWeight="Bold"
                   FontSize="14"
                   Foreground="Blue"
                   HorizontalAlignment="Center"/>

        <TextBlock x:Name="QuestionNumberTextBlock"
                   FontWeight="Bold"
                   FontSize="12"
                   Foreground="Gray"
                   HorizontalAlignment="Center"/>

        <Button x:Name="NextButton"
                Content="Dalej"
                Click="NextButton_Click"
                HorizontalAlignment="Center"
                Margin="0,10,0,0"/>
    
    </StackPanel>
</Window>