<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="CSharpQuizApp.Views.MainWindow"
        Width="400" Height="500" Title="Quiz App">

    <Grid Margin="10"
          RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto"
          ColumnDefinitions="*,*"
          HorizontalAlignment="Center"
          VerticalAlignment="Center">

        <!-- Numer pytania -->
        <TextBlock x:Name="QuestionNumberTextBlock"
                   Grid.Row="0" Grid.ColumnSpan="2"
                   FontWeight="Bold"
                   FontSize="12"
                   Foreground="Gray"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <!-- Pytanie -->
        <TextBlock x:Name="QuestionTextBlock"
                   Grid.Row="1" Grid.ColumnSpan="2"
                   FontSize="18"
                   TextWrapping="Wrap"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center"/>

        <!-- Odpowiedzi -->
        <Button x:Name="Answer1Button" Grid.Row="2" Grid.Column="0" Click="Answer1_Click" Margin="5"/>
        <Button x:Name="Answer2Button" Grid.Row="2" Grid.Column="1" Click="Answer2_Click" Margin="5"/>
        <Button x:Name="Answer3Button" Grid.Row="3" Grid.Column="0" Click="Answer3_Click" Margin="5"/>
        <Button x:Name="Answer4Button" Grid.Row="3" Grid.Column="1" Click="Answer4_Click" Margin="5"/>

        <!-- Komunikaty -->
        <TextBlock x:Name="FeedbackTextBlock"
                   Grid.Row="4" Grid.ColumnSpan="2"
                   FontWeight="Bold"
                   FontSize="14"
                   Foreground="DarkGreen"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0"/>

        <TextBlock x:Name="ScoreTextBlock"
                   Grid.Row="5" Grid.ColumnSpan="2"
                   FontWeight="Bold"
                   FontSize="14"
                   Foreground="Blue"
                   HorizontalAlignment="Center"/>

        <!-- Przycisk Dalej -->
        <Button x:Name="NextButton"
                Grid.Row="6" Grid.ColumnSpan="2"
                Content="Dalej"
                Click="NextButton_Click"
                HorizontalAlignment="Center"
                Margin="0,10,0,0"/>

        <!-- Ekran koÅ„cowy -->
        <TextBlock x:Name="FinalResultTextBlock"
                   Grid.Row="7" Grid.ColumnSpan="2"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="DarkBlue"
                   HorizontalAlignment="Center"
                   IsVisible="False"
                   Margin="0,10,0,0"/>

        <Button x:Name="RestartButton"
                Grid.Row="8" Grid.ColumnSpan="2"
                Content="Zagraj ponownie"
                Click="RestartButton_Click"
                HorizontalAlignment="Center"
                IsVisible="False"
                Margin="0,10,0,0"/>
    </Grid>
</Window>