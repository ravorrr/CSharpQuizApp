<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CSharpQuizApp.Views.StatisticsView">
    <Border Background="#1F1F1F" Padding="30">
        <Grid RowDefinitions="Auto,*,Auto" Margin="0">
            
            <TextBlock Grid.Row="0"
                       Text="📊 Statystyki gracza"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="12" Width="350">
                <TextBlock x:Name="TotalQuizzesTextBlock" FontSize="18" Foreground="White" TextAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock x:Name="AverageScoreTextBlock" FontSize="18" Foreground="White" TextAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock x:Name="BestScoreTextBlock" FontSize="18" Foreground="White" TextAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock x:Name="WorstScoreTextBlock" FontSize="18" Foreground="White" TextAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock x:Name="AverageTimeTextBlock" FontSize="18" Foreground="White" TextAlignment="Center" HorizontalAlignment="Center"/>
            </StackPanel>
            
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20" Margin="0,20,0,0">
                <Button Content="🔙 Powrót do menu"
                        Width="150" Height="40"
                        Cursor="Hand"
                        Click="BackToMenu_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>