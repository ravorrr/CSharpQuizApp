<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:loc="clr-namespace:QuizApp.Localization"
             x:Class="QuizApp.Views.StatisticsView">
  <Border Background="#1F1F1F" Padding="30">
    <Grid RowDefinitions="Auto,*,Auto" Margin="0">
        
      <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
        <TextBlock Text="📊"
                   FontSize="24"
                   Margin="0,-3,8,0"
                   VerticalAlignment="Center"/>
        <TextBlock Text="{Binding [Statistics_Header], Source={x:Static loc:LocalizationService.L}}"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   VerticalAlignment="Center"/>
      </StackPanel>
      
      <StackPanel Grid.Row="1"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Spacing="18"
                  Width="350">
        
        <ComboBox x:Name="PlayerComboBox"
                  Width="250"
                  HorizontalAlignment="Center"
                  SelectionChanged="PlayerComboBox_SelectionChanged"
                  Cursor="Hand"
                  BorderBrush="Transparent"
                  FontSize="16"/>
        
        <TextBlock x:Name="TotalQuizzesTextBlock"
                   FontSize="18" Foreground="White"
                   TextAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock x:Name="AverageScoreTextBlock"
                   FontSize="18" Foreground="White"
                   TextAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock x:Name="BestScoreTextBlock"
                   FontSize="18" Foreground="White"
                   TextAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock x:Name="WorstScoreTextBlock"
                   FontSize="18" Foreground="White"
                   TextAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock x:Name="AverageTimeTextBlock"
                   FontSize="18" Foreground="White"
                   TextAlignment="Center" HorizontalAlignment="Center"/>
      </StackPanel>
      
      <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20" Margin="0,20,0,0">
        <Button Width="200" Cursor="Hand" Click="BackToMenu_Click">
          <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Foreground="White"
                     DataContext="{x:Static loc:LocalizationService.L}" x:DataType="loc:Localizer">
            <Run Text="🔙 "/>
            <Run Text="{Binding [History_Back]}"/>
          </TextBlock>
        </Button>
      </StackPanel>

    </Grid>
  </Border>
</UserControl>
