<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="CSharpQuizApp.Views.ConfirmExitWindow"
        Width="300" Height="150"
        Title="Potwierdzenie"
        WindowStartupLocation="CenterOwner"
        Background="#2B2B2B">

    <StackPanel Margin="20" Spacing="20" VerticalAlignment="Center">
        <TextBlock Text="Czy na pewno chcesz przerwać quiz?"
                   Foreground="White"
                   FontSize="14"
                   TextAlignment="Center"
                   HorizontalAlignment="Center"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
            <Button Content="Tak" Width="80" Click="Yes_Click"/>
            <Button Content="Nie" Width="80" Click="No_Click"/>
        </StackPanel>
    </StackPanel>
</Window>